<odoo>
  <data>
    <record id="view_rental_clause_list" model="ir.ui.view">
      <field name="name">rental.clause.list</field>
      <field name="model">rental.clause</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="is_default"/>
          <field name="is_editable"/>
          <field name="sequence"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="view_rental_clause_form" model="ir.ui.view">
      <field name="name">rental.clause.form</field>
      <field name="model">rental.clause</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="sequence"/>
            </group>
            <group>
              <field name="is_default"/>
              <field name="is_editable"/>
              <field name="active"/>
            </group>
            <group string="Texto de la cláusula">
              <field name="body" widget="html"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_rental_clause" model="ir.actions.act_window">
      <field name="name">Cláusulas</field>
      <field name="res_model">rental.clause</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
