<odoo>
  <data>
    <!-- LISTA (v18) -->
    <record id="view_rental_visit_list" model="ir.ui.view">
      <field name="name">rental.visit.list</field>
      <field name="model">rental.visit</field>
      <field name="arch" type="xml">
        <list>
          <field name="date"/>
          <field name="property_id"/>
          <field name="agent_id"/>
          <field name="interested_partner_id"/>
        </list>
      </field>
    </record>

    <!-- FORM -->
    <record id="view_rental_visit_form" model="ir.ui.view">
      <field name="name">rental.visit.form</field>
      <field name="model">rental.visit</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="date"/>
              <field name="property_id"/>
              <field name="agent_id"/>
              <field name="interested_partner_id"/>
            </group>
            <group>
              <field name="notes"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- AcciÃ³n: usar list,form -->
    <record id="action_rental_visit" model="ir.actions.act_window">
      <field name="name">Visitas</field>
      <field name="res_model">rental.visit</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>
